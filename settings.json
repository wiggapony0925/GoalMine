{
    "app": {
        "maintenance_mode": false, // Set to true to pause the bot and return 503 to WhatsApp
        "interaction_mode": "CONVERSATIONAL", // Options: "CONVERSATIONAL" (Text-rich), "BUTTON_STRICT" (Menu/Button driven)
        "log_level": "INFO", // Controls terminal verbosity: DEBUG, INFO, WARNING, ERROR
        "detailed_request_logging": false, // Set to true to log every single network hit (not just webhooks)
        "support_contact": "@Admin" // Contact handle shown in system error messages
    },
    "agents": {
        "logistics": true, // Toggle fatigue/venue analysis (High API usage)
        "tactics": true, // Toggle tactical/form analysis
        "market": true, // Toggle live odds/overround analysis
        "narrative": true, // Toggle news/reddit sentiment analysis
        "quant": true // Toggle final mathematical ROI calculation
    },
    "scheduling": {
        "morning_brief_hour": 5, // Hour (24h) to send the daily high-conviction brief
        "morning_brief_minute": 0, // Minute to send the daily high-conviction brief
        "kickoff_alert_interval_mins": 15, // How often the bot checks for upcoming matches (minutes)
        "alert_lead_time_mins": 60 // How many minutes before kickoff to send a proactive alert
    },
    "strategy": {
        "default_budget": 100, // Fallback budget if user doesn't specify one
        "kelly_multiplier": 1.0, // 1.0 = Full Kelly (Aggressive), 0.5 = Half Kelly (Safe)
        "max_stake_pct": 10.0, // Maximum % of budget allowed on a single bet
        "min_edge_threshold": 0.01, // Minimum ROI % (e.g. 0.01 = 1%) to even recommend a bet
        "swarm_cache_ttl_hours": 6 // How many hours to reuse analysis for the same match
    },
    "whatsapp": {
        "use_templates": true, // Use professional Meta Templates (required for daily briefs)
        "templates": {
            "welcome": "goalmine_welcome", // Approved name for the greeting template
            "briefing": "goalmine_alpha_briefing", // Approved name for the 5 AM brief template
            "kickoff": "goalmine_kickoff_alert", // Approved name for the kickoff alert template
            "sharp_move": "goalmine_sharp_move" // Approved name for the market shift alert
        }
    },
    "llm": {
        "model": "gpt-4o", // Primary brain for the Closer and Strategic Advisor
        "temperature": 0.3, // Determinism for betting logic (0 = rigid, 1 = creative)
        "gatekeeper_temperature": 0.1 // Extra high determinism for intent classification
    }
}